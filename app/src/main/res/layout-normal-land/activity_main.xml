<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:id="@+id/hello_Username_Message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="casual"
        android:text="Hello username"
        android:textAlignment="center"
        android:textColor="?attr/editTextColor"
        android:textSize="36sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/main_button_find_groups"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ED303C"
        android:padding="10dp"
        android:text="@string/find_groups"
        android:textSize="18sp"
        android:layout_above="@+id/view"
        android:layout_centerHorizontal="true" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:layout_above="@+id/main_button_view_pref_groups"
        android:id="@+id/view" />


    <Button
        android:id="@+id/main_button_view_pref_groups"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F5634A"
        android:padding="10dp"
        android:text="@string/view_pref_groups"
        android:textSize="18sp"
        android:layout_above="@+id/view2"
        android:layout_centerHorizontal="true" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:layout_above="@+id/main_button_view_event_partecipation"
        android:id="@+id/view2" />


    <Button
        android:id="@+id/main_button_view_event_partecipation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF9C5B"
        android:padding="10dp"
        android:text="@string/view_event_partecipation"
        android:textSize="18sp"
        android:layout_above="@+id/view3"
        android:layout_alignParentStart="true" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:layout_above="@+id/main_button_view_personal_page"
        android:id="@+id/view3" />


    <Button
        android:id="@+id/main_button_view_personal_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FAD089"
        android:padding="10dp"
        android:text="@string/personalPage"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>