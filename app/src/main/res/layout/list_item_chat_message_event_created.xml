<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="?attr/selectableItemBackground"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/text_chat_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="February 22nd"
        android:textColor="#000000"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/image_chat_profile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/text_chat_date"
        android:layout_marginTop="4dp"
        android:contentDescription="@string/channel_chat_content_desc_profile" />

    <TextView
        android:id="@+id/text_chat_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_chat_date"
        android:layout_marginStart="16dp"
        android:layout_toRightOf="@id/image_chat_profile"
        android:text="Terry"
        android:textColor="#3a414d"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_chat_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/text_chat_nickname"
        android:layout_below="@id/text_chat_nickname"
        android:text="@string/created_event_text"
        android:textColor="@color/common_google_signin_btn_text_light_focused"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/text_chat_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/text_chat_nickname"
        android:layout_marginStart="8dp"
        android:layout_toRightOf="@id/text_chat_nickname"
        android:text="11:36"
        android:textColor="@color/common_google_signin_btn_text_light_default"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_chat_message"
        android:layout_alignLeft="@id/text_chat_message"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:minWidth="240dp"
        android:padding="8dp"
        android:background="@drawable/chat_file_background"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_chat_event_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginEnd="16dp"
                android:text="Nome_evento"
                android:textColor="#000000"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/text_chat_event_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Luogo"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/text_chat_event_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giorno, 23-4-2012"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/text_chat_event_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13:55"
                android:textSize="18sp" />


        </LinearLayout>



    </LinearLayout>

</RelativeLayout>