<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
    android:layout_height="match_parent">


<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="30dp"
    android:weightSum="1">

    <TextView
        android:id="@+id/event_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:text="NomeEvento"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/event_group_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Evento del gruppo: gruppo"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/event_creator_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Creato da : nome"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/event_day_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Il giorno: 1-1-2010 alle ore 10:00"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:layout_marginTop="30dp"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/event_location_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="universitÃ  ingegneria"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:textColor="@color/common_google_signin_btn_text_light_default"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/event_description_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descrizione"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="70dp"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="24sp"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_event_view_partecipants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="@android:color/holo_blue_light"
        android:fontFamily="casual"
        android:padding="12dp"
        android:text="@string/view_partecipants"
        android:textSize="18sp"
        android:textStyle="bold" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_event_view_maps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:background="@android:color/holo_blue_light"
        android:fontFamily="casual"
        android:padding="12dp"
        android:text="@string/view_maps"
        android:textSize="18sp"
        android:textStyle="bold" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_event_partecipa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="55dp"
        android:fontFamily="casual"
        android:padding="12dp"
        android:text="Partecipa/Cancella Partecipazione"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="50dp"/>
</LinearLayout>
</ScrollView>