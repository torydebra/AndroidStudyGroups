<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:id="@+id/event_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:text="NomeEvento"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/event_group_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Evento del gruppo: gruppo"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/event_day_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Il giorno: 1-1-2010 alle ore 10:00"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/event_location_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Luogo: universitÃ  ingegneria"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        android:textSize="24sp" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_event_view_partecipants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:padding="12dp"
        android:text="@string/view_partecipants"
        android:textSize="18sp" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_event_partecipa_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="55dp"
        android:padding="12dp"
        android:text="@string/partecipa_confirmation"
        android:textSize="24sp" />
</LinearLayout>