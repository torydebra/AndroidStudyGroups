<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:id="@+id/hello_Username_Message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="casual"
        android:text="Hello username"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/welcome_back_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="cursive"
        android:text="@string/welcome_back_message"
        android:textAlignment="center"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_weight="0.48"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_general" />

    <Button
        android:id="@+id/main_button_find_groups"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_weight="0.04"
        android:background="#ED303C"
        android:text="@string/find_groups"
        android:textSize="24sp" />

    <Button
        android:id="@+id/main_button_view_pref_groups"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.04"
        android:padding="20dp"
        android:background="#F5634A"
        android:text="@string/view_pref_groups"
        android:textSize="24sp" />

    <Button
        android:id="@+id/main_button_view_event_partecipation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.04"
        android:padding="20dp"
        android:background="#FF9C5B"
        android:text="@string/view_event_partecipation"
        android:textSize="24sp" />

    <Button
        android:id="@+id/main_button_view_personal_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.04"
        android:background="#FAD089"
        android:padding="20dp"
        android:text="@string/personalPage"
        android:textSize="24sp" />


</LinearLayout>